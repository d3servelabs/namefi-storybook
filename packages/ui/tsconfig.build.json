{
	"extends": "@namefi/tsconfig/base.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"outDir": "dist",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "types",
		"noImplicitAny": false
	},
	"include": [
		"src/lib",
		"custom.d.ts",
	],
	"exclude": [
		"node_modules",
		"lib",
		"dist"
	]
}